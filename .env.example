# ====================================================================
# CONFIGURACIÓN DE MYSQL
# ====================================================================
MYSQL_ROOT_PASSWORD=root_secure_password_2025
MYSQL_DATABASE=clinicaveterinaria
MYSQL_USER=clinica_user
MYSQL_PASSWORD=clinica_secure_pass_2025
MYSQL_PORT=3306

# ====================================================================
# CONFIGURACIÓN DE BACKEND
# ====================================================================
BACKEND_PORT=8080
SPRING_PROFILES_ACTIVE=prod

# JWT Secret (CAMBIAR en producción - mínimo 32 caracteres)
JWT_SECRET=clavesecretamuyseguraylargacon32caracteres123produccion2025

# ====================================================================
# CONFIGURACIÓN DE FRONTEND (cuando se dockerice)
# ====================================================================
FRONTEND_PORT=80
VITE_API_URL=http://localhost:8080

# ====================================================================
# CONFIGURACIÓN DE LANDING PAGE (cuando se dockerice)
# ====================================================================
LANDING_PORT=8081

# ====================================================================
# CONFIGURACIÓN GENERAL
# ====================================================================
TZ=America/Bogota
COMPOSE_PROJECT_NAME=clinica-veterinaria

# ====================================================================

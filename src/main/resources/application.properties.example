# Database Configuration
spring.datasource.url=jdbc:mysql://localhost:3306/clinicaveterinaria
spring.datasource.username=root
spring.datasource.password=TU_PASSWORD_AQUI

# Server Configuration
server.port=8080

# JWT Configuration
jwt.secret=TU_JWT_SECRET_AQUI_MINIMO_32_CARACTERES

# Path Matching
spring.mvc.pathmatch.matching-strategy=ant_path_matcher

# Logging Configuration
logging.level.root=INFO
logging.level.com.sena.clinicaveterinaria.controller=INFO
logging.level.com.sena.clinicaveterinaria.service=DEBUG
logging.level.com.sena.clinicaveterinaria.service.impl=DEBUG
logging.level.com.sena.clinicaveterinaria.repository=WARN
logging.level.com.sena.clinicaveterinaria.config=DEBUG
logging.level.org.springframework=INFO
logging.level.org.springframework.web=INFO
logging.level.org.springframework.security=INFO
logging.level.org.hibernate.SQL=WARN
logging.level.org.hibernate.type.descriptor.sql.BasicBinder=WARN
logging.pattern.console=%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n

# Archivo de logs (opcional - descomenta si quieres guardar en archivo)
# logging.file.name=logs/clinicaveterinaria.log
# logging.file.max-size=10MB
# logging.file.max-history=30
# logging.pattern.file=%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{50} - %msg%n

# =================================================================
# INSTRUCCIONES PARA CONFIGURAR:
# =================================================================
# 1. Copia este archivo y renómbralo a: application.properties
# 2. Reemplaza TU_PASSWORD_AQUI con tu contraseña real de MySQL
# 3. Genera un JWT secret seguro (mínimo 32 caracteres aleatorios)
# 4. NUNCA subas el archivo application.properties a Git
# =================================================================

